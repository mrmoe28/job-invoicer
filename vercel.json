{
  "version": 2,
  "buildCommand": "pnpm build --filter=@pulsecrm/web",
  "outputDirectory": "apps/web/.next",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_APP_URL": "https://$VERCEL_URL",
      "NEXT_PUBLIC_API_URL": "https://$VERCEL_URL/api"
    }
  }
}